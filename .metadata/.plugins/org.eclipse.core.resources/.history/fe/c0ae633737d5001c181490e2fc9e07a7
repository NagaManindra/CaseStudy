package com.eShoppingZone.user.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.eShoppingZone.user.model.User;
import com.eShoppingZone.user.repo.UserRepo;

@Service
public class UserService {

	@Autowired
	private UserRepo userRepository;

	public User createUser(User user) {
		return userRepository.save(user.,user.getEmail()user.getEmail());
	}

	public List<User> getAllUser() {

		return userRepository.findAll();
	}

	public Optional<User> getById(String _id) {

		return userRepository.findById(_id);
	}

	public User getByFullName(String fullName) {

		return userRepository.findByName(fullName);

	}

	public User getByEmail(String email) {
		return userRepository.findByEmail(email);
	}

	public User updateProfile(User user) {

		return userRepository.save(user);
	}

	public User addNewUser(User user) {
		return userRepository.save(user);
	}

}
